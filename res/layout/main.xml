<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/Main_LinearLayout_01"
        android:layout_width="fill_parent"
        android:layout_height="130px"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center|center_vertical"
            android:layout_weight="1"
            android:gravity="left"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/MainButton_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_vertical"
                android:layout_marginLeft="20px"
                android:background="@drawable/icon_setting"
                android:gravity="center|center_vertical" >
            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center|center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_vertical"
                android:background="@drawable/logo_ollybolly"
                android:gravity="center|center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center|center_vertical"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/MainButton_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_vertical"
                android:layout_marginRight="20px"
                android:background="@drawable/icon_archive"
                android:gravity="center|center_vertical" >
            </ImageView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Main_LinearLayout_02"
        android:layout_width="fill_parent"
        android:layout_height="270px"
        android:layout_gravity="center|center_vertical"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10px" >

        <com.ollybolly.OllybollyMainFlow
            android:id="@+id/cover_flow"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center|center_vertical"
            android:layout_marginTop="10px"
            android:gravity="center" >
        </com.ollybolly.OllybollyMainFlow>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Main_LinearLayout_03"
        android:layout_width="fill_parent"
        android:layout_height="60px"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center|center_vertical"
            android:layout_weight="1"
            android:gravity="left"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/Left_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|bottom"
                android:layout_marginLeft="20px"
                android:background="@drawable/icon_daumfn_ko"
                android:gravity="bottom" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center|center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <ViewStub
                android:id="@+id/country_hidden"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|top"
                android:gravity="top"
                android:inflatedId="@+id/nation_shown"
                android:layout="@layout/nation_text" >
            </ViewStub>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center|center_vertical"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/Right_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:layout_marginRight="20px"
                android:background="@drawable/icon_daum_ko"
                android:gravity="bottom" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>