<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
   	<LinearLayout
   		android:id="@+id/Main_LinearLayout_01" 
  		android:orientation="horizontal"
  		android:layout_width="fill_parent"
  		android:layout_height="130px">
		<LinearLayout android:orientation="horizontal"
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			android:layout_gravity="center|center_vertical"
			android:gravity="left"
			android:layout_weight="1">  		
  				<ImageView 
					android:id="@+id/MainButton_01" 
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content" 
					android:layout_gravity="center|center_vertical"
					android:gravity="center|center_vertical"
					android:layout_marginLeft="20px"
					android:background="@drawable/icon_setting">
				</ImageView>	
		</LinearLayout>	
				
		<LinearLayout android:orientation="horizontal"
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			android:layout_gravity="center|center_vertical"
			android:gravity="center"
			android:layout_weight="1">  						
				<ImageView  
						android:id="@+id/logo"
						android:layout_width="wrap_content" 
						android:layout_height="wrap_content" 
						android:layout_gravity="center|center_vertical"
						android:gravity="center|center_vertical"
						android:background="@drawable/logo_ollybolly"/>
		</LinearLayout>	  		
		<LinearLayout android:orientation="horizontal"
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			android:layout_gravity="center|center_vertical"
			android:gravity="right"
			android:layout_weight="1"> 										
  				<ImageView 
					android:id="@+id/MainButton_02" 
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content" 
					android:layout_gravity="center|center_vertical"
					android:gravity="center|center_vertical"
					android:layout_marginRight="20px"
					android:background="@drawable/icon_archive">
			    </ImageView>	  
	    </LinearLayout>	  		 
	</LinearLayout>      
   <LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="270px"
    android:layout_gravity="center|center_vertical"
    android:gravity="center"
    android:id="@+id/Main_LinearLayout_02" 
    android:padding="10px"
    >
   			<com.ollybolly.OllybollyMainFlow
					android:id="@+id/cover_flow"
					android:layout_gravity="center|center_vertical"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:layout_marginTop="10px"
				android:gravity="center">
			</com.ollybolly.OllybollyMainFlow>	
	</LinearLayout>  		
   	<LinearLayout
   	    android:id="@+id/Main_LinearLayout_03" 
  		android:orientation="horizontal"
  		android:layout_width="fill_parent"
  		android:layout_height="60px">	
		<LinearLayout android:orientation="horizontal"
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			android:layout_gravity="center|center_vertical"
			android:gravity="left"
			android:layout_weight="1">  		  		
				<ImageView  
						android:id="@+id/Left_01" 
						android:layout_width="wrap_content" 
						android:layout_height="wrap_content" 
						android:layout_gravity="left|bottom"
						android:gravity="bottom"
						android:layout_marginLeft="20px"
						android:background="@drawable/icon_daumfn_ko"/>  
		</LinearLayout>
		<LinearLayout android:orientation="horizontal"
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			android:layout_gravity="center|center_vertical"
			android:gravity="center"
			android:layout_weight="1">  									
				<ViewStub 
					android:id="@+id/country_hidden"
					android:inflatedId="@+id/nation_shown"
					android:layout="@layout/nation_text"
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content"
					android:layout_gravity="top|top"
					android:gravity="top">
				</ViewStub>	
		</LinearLayout>					
		<LinearLayout android:orientation="horizontal"
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			android:layout_gravity="center|center_vertical"
			android:gravity="right"
			android:layout_weight="1">  												 	
				<ImageView  
						android:id="@+id/Right_01" 
						android:layout_width="wrap_content" 
						android:layout_height="wrap_content" 
						android:layout_gravity="right|bottom"
						android:gravity="bottom"
						android:layout_marginRight="20px"
						android:background="@drawable/icon_daum_ko"/>  	 
		</LinearLayout>  							
	</LinearLayout>  	
</LinearLayout>
