<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="#FFFFFF">
  		<LinearLayout
		  android:layout_width="fill_parent"
		  android:layout_height="wrap_content"
		  android:background="#FFFFFF"
		  android:paddingTop="5px"
		  android:paddingBottom="5px"
		  android:paddingLeft="5px"
		  android:paddingRight="5px">
					<ImageButton 
							android:id="@+id/ComButton_01" 
							android:layout_width="wrap_content" 
							android:layout_height="wrap_content" 
							android:layout_gravity="center|center_vertical"
							android:gravity="center|center_vertical"
							android:background="@drawable/bt_korean"
							>
					    </ImageButton>	
					<ImageButton 
							android:id="@+id/ComButton_02" 
							android:layout_width="wrap_content" 
							android:layout_height="wrap_content" 
							android:layout_gravity="center|center_vertical"
							android:gravity="center|center_vertical"
							android:layout_marginLeft="10px"
							android:background="@drawable/bt_english">
					    </ImageButton>		
					<ImageButton
							android:id="@+id/ComButton_03" 
							android:layout_width="230px" 
							android:layout_height="52px" 
							android:layout_gravity="center|center_vertical"
							android:gravity="center|center_vertical"
							android:layout_marginLeft="10px">
					 </ImageButton>			    			    		    
		</LinearLayout>
		<LinearLayout
		  android:layout_width="fill_parent"
		  android:layout_height="wrap_content"
		  android:background="#FFFFFF"
		  android:paddingTop="5px"
		  android:paddingBottom="5px"
		  android:paddingLeft="5px"
		  android:paddingRight="5px">
					<ImageButton 
							android:id="@+id/ComButton_04" 
							android:layout_width="wrap_content" 
							android:layout_height="wrap_content" 
							android:layout_gravity="center|center_vertical"
							android:gravity="center|center_vertical"
							android:background="@drawable/bt_view_description"
							>
					    </ImageButton>	
					<ImageButton 
							android:id="@+id/ComButton_05" 
							android:layout_width="wrap_content" 
							android:layout_height="wrap_content" 
							android:layout_gravity="center|center_vertical"
							android:gravity="center|center_vertical"
							android:layout_marginLeft="10px"
							android:background="@drawable/bt_save">
					    </ImageButton>	
					<ImageButton 
							android:id="@+id/ComButton_06" 
							android:layout_width="wrap_content" 
							android:layout_height="wrap_content" 
							android:layout_gravity="center|center_vertical"
							android:gravity="center|center_vertical"
							android:layout_marginLeft="10px"
							android:background="@drawable/bt_goto_continue">
					    </ImageButton>				    		    
		</LinearLayout>
</LinearLayout>
